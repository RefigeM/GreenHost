@model List<Department>
@{
    ViewData["Title"] = "Index";
}
<td><a class="btn btn-primary" asp-action="Create" asp-controller="Department"  class="btn btn-primary">Create</a></td>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>IsDeleted</th>
                    <th colspan="3">Actions</th>

                </tr>
            </thead>
      
            <tbody>
              @foreach (var item in Model)
                {
               <tr>
                    <td>@item.Id </td>
                     <td>@item.Name </td>
                        <td>@item.IsDeleted </td>
                        <td><a asp-action="Info" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-primary">Info</a></td>
                        <td><a class="btn btn-primary" asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-primary">Delete</a></td>
                        <td><a class="btn btn-primary" asp-action="Update" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-primary">Update</a></td>

                </tr>
                }
           
            </tbody>
        </table>
    </div>
</div>
